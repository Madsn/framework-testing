<h1>Listing members</h1>
<div class="row">
  <div class="col-sm-12">

    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Initials</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @members.each do |member| %>
          <tr>
            <td><%= member.name %></td>
            <td><%= member.initials %></td>
            <td><%= link_to 'Edit', edit_member_path(member) %></td>
            <td><%= link_to 'Destroy', member, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <br/>

    <%= button_to 'New Member', new_member_path, :class => "btn btn-primary pull-right", :method => "get" %>
  </div>
</div>